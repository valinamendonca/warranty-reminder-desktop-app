{
  "name": "desktop-app",
  "version": "1.0.0",
  "description": "A desktop application built with Electron",
  "author": "Valina Mendonca",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.desktopapp",
    "productName": "MyDesktopApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "../frontend/dist/**/*",
      "backend-0.0.1-SNAPSHOT.jar",
      "jre/**/*",
      "../data/**/*",
      "icon.png",
      "**/*"
    ],
    "extraResources": [
      {
        "from": "backend-0.0.1-SNAPSHOT.jar",
        "to": "backend-0.0.1-SNAPSHOT.jar"
      },
      {
        "from": "jre",
        "to": "jre"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "axios": "^1.10.0",
    "electron-auto-launch": "^5.0.7",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2"
  }
}
